<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--android:background="@drawable/jact_background"-->
<include layout="@layout/toolbar_layout"/>
<!-- The main content view -->
<RelativeLayout
    android:id="@+id/my_profile_content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@color/white">

    <!-- Temp button for testing GCM Upstream (Device to Server) messages -->
    <Button
        android:id="@+id/echo_gcm_upstream_msg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="doEchoUpstreamMessageClick"
        android:background="@drawable/button_selector_blue"
        android:text="Echo GCM Message"
        android:padding="5dp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/send_gcm_upstream_msg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="doSendUpstreamMessageClick"
        android:background="@drawable/button_selector_blue"
        android:text="Send GCM Message"
        android:padding="5dp"
        android:textColor="@color/black"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/featured_prizes_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/turquois_light">
        <TextView
            android:id="@+id/featured_prizes_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/empty_string"
            android:textSize="18sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/featured_prizes_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/featured_prizes_tv"
            android:layout_toRightOf="@+id/featured_prizes_tv"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:text="@string/details"
            android:textSize="18sp"
            android:textColor="@color/turquois_dark"
            android:clickable="true"
            android:onClick="doPrizeDrawingsDetailsClick"/>
        <ImageView
            android:id="@+id/featured_prizes_details_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toEndOf="@+id/featured_prizes_details_tv"
            android:layout_toRightOf="@+id/featured_prizes_details_tv"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:src="@drawable/right_arrow_transparent"
            android:background="@color/transparent"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/featured_rewards_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/featured_prizes_ll"
        android:layout_marginTop="5dp"
        android:background="@color/transparent">
        <TextView
            android:id="@+id/featured_rewards_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="@string/empty_string"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/featured_rewards_title_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/featured_rewards_title_tv"
            android:layout_toRightOf="@+id/featured_rewards_title_tv"
            android:text="@string/all_rewards"
            android:textSize="14sp"
            android:textColor="@color/turquois_dark"
            android:onClick="doSeeAllRewardsClick"
            android:clickable="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/featured_rewards_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/featured_rewards_title_rl">
        <TextView
            android:id="@+id/featured_rewards_left_tv"
            android:layout_width="32dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/empty_string"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:background="@drawable/left_caret"/>
        <HorizontalScrollView
            android:id="@+id/featured_rewards_sv"
            android:layout_width="match_parent"
            android:layout_marginRight="35dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/featured_rewards_left_tv" >
            <LinearLayout
                android:id="@+id/featured_rewards_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />
        </HorizontalScrollView>
        <TextView
            android:id="@+id/featured_rewards_right_tv"
            android:layout_width="32dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/empty_string"
            android:textSize="32sp"
            android:background="@drawable/right_carret"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/featured_earn_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/featured_rewards_rl"
        android:layout_marginTop="50dp"
        android:background="@color/transparent">
        <TextView
            android:id="@+id/featured_earn_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="@string/empty_string"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/featured_earn_title_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/featured_earn_title_tv"
            android:layout_toRightOf="@+id/featured_earn_title_tv"
            android:text="@string/all_earn"
            android:textSize="14sp"
            android:textColor="@color/turquois_dark"
            android:onClick="doSeeAllEarnClick"
            android:clickable="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/featured_earn_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/featured_earn_title_rl">
        <TextView
            android:id="@+id/featured_earn_left_tv"
            android:layout_width="32dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/empty_string"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:background="@drawable/left_caret"/>
        <HorizontalScrollView
            android:id="@+id/featured_earn_sv"
            android:layout_width="match_parent"
            android:layout_marginRight="35dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/featured_earn_left_tv" >
            <LinearLayout
                android:id="@+id/featured_earn_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />
        </HorizontalScrollView>
        <TextView
            android:id="@+id/featured_earn_right_tv"
            android:layout_width="32dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/empty_string"
            android:textSize="32sp"
            android:background="@drawable/right_carret"/>
    </RelativeLayout>
    
    <ProgressBar
   	    android:id="@+id/my_profile_progress_bar"
   	    style="?android:attr/progressBarStyleLarge"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@+id/current_points"
   	    android:layout_centerHorizontal="true"
   	    android:layout_marginTop="15dp"
    	android:background="@color/transparent"
        android:visibility="invisible"
   	/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
<!-- The navigation drawer -->
<ListView android:id="@+id/nav_left_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
    	android:background="#CC111111"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"/>

    <!--android:listSelector="@drawable/drawer_bg_selector"-->
</android.support.v4.widget.DrawerLayout>