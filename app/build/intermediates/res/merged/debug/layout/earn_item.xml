<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/earn_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="5dp">
    <!--android:background="@drawable/products_bg_selector"-->

    <!--  Video Thumbnail image -->
    <LinearLayout android:id="@+id/earn_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@color/transparent"
        android:layout_marginRight="2dp">
        <!--android:background="@drawable/products_bg_selector"-->
        <com.example.jactfirstdemo.JactImageView
            android:id="@+id/earn_image"
            android:layout_width="200dp"
            android:layout_height="180dp"              
    		android:clickable="true"
   	    	android:onClick="doEarnNowVideoClick"
        />
    </LinearLayout>
    <!-- END Video Thumbnail image -->
    
    <!-- Earn Now Button -->
    <Button
   	    android:id="@+id/earn_now_button"
   	    android:background="@drawable/button_selector_yellow"
   	    android:layout_width="200dp"
   	    android:layout_height="30dp"
   	    android:gravity="center"
   	    android:paddingLeft="10dp"
   	    android:paddingRight="10dp"
   	    android:onClick="doEarnNowClick"
   	    android:text="@string/earn_now"
   	    android:textColor="@color/white"/>
    <!-- END Earn Now Button -->
    
    <!-- Earn Title -->
    <TextView
        android:id="@+id/earn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/transparent"
        android:text="@string/earn_title_str"
        android:textColor="@color/black"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <!-- END Earn Title -->
    
    <!-- Earn Points -->    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/earn_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Earn"
            android:textColor="@color/black"
            android:typeface="sans"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/product_jact_price_points_icon"
            android:contentDescription="@string/dummy_image_view_description"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/earn_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/black"
            android:typeface="sans"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <!--  END Earn Points -->
    
    <!-- Empty Text View, to hold Earn ID -->
    <TextView
        android:id="@+id/earn_nid"
		android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="@color/transparent"
        android:visibility="invisible"/>
 
</LinearLayout><!-- From: file:/C:/Users/Paul/StudioProjects/android-demo/app/src/main/res/layout/earn_item.xml -->