    <!-- Use Same Address as Shipping -->    

    <!-- Title -->
    <LinearLayout
        android:id="@+id/credit_card_header_bar"
        android:layout_below="@id/credit_card_add_new_addr_ll"
   	    android:layout_width="match_parent"
   	    android:layout_height="30dp"
        android:layout_marginTop="1dp"
   	    android:layout_marginBottom="0dp"
    	android:background="@color/transparent"
    	android:orientation="horizontal"
	    android:weightSum="1.0">
	   	<TextView
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.01"
	   	    android:layout_height="wrap_content"
   			android:background="@color/transparent"/>
	   	<TextView
	   	    android:id="@+id/credit_card_header_bar_title"
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.98"
	   	    android:layout_height="wrap_content"
	   		android:layout_marginTop="4dp"
	   		android:layout_marginBottom="4dp"
	   		android:gravity="center"
	   	    android:textSize="16sp"
	   	    android:textStyle="bold"
	   	    android:text="@string/cc_title_str"
	   	    android:textColor="@color/dark_blue"
   			android:background="@color/transparent"/>
	   	<TextView
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.01"
	   	    android:layout_height="wrap_content"
   			android:background="@color/transparent"/>
	</LinearLayout>    
   	<!-- End Title -->

	<!-- Divider Bar -->
    <LinearLayout
        android:id="@+id/credit_card_divider_bar"
        android:layout_below="@id/credit_card_header_bar"
   	    android:layout_width="match_parent"
   	    android:layout_height="1dp"
        android:layout_marginTop="0dp"
   	    android:layout_marginBottom="0dp"
    	android:background="@color/light_blue"
    	android:orientation="horizontal">
    </LinearLayout>
    <!-- End Divider Bar -->
    
    <LinearLayout
        android:layout_below="@id/credit_card_divider_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	   	
    <!-- List of Addresses -->
    <ListView
        android:id="@+id/credit_card_list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/products_bg_selector"
    />
    <!-- End List of Addresses -->
    
    <LinearLayout
        android:id="@+id/credit_card_bottom_ll"
        android:layout_alignParentBottom="true"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
   	    android:layout_marginBottom="1dp"
    	android:background="@color/transparent"
    	android:orientation="vertical">
	    <!-- Divider Bar -->
	    <LinearLayout
	   	    android:layout_width="match_parent"
	   	    android:layout_height="3dp"
	        android:layout_marginTop="0dp"
	   	    android:layout_marginBottom="0dp"
	    	android:background="@color/light_blue"
	    	android:orientation="horizontal">
	    </LinearLayout>
	    <!-- End Divider Bar -->
	    
	    <!-- Prev and Next Buttons -->
		<LinearLayout
	   	    android:id="@+id/credit_card_button_ll"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	        android:layout_marginTop="1dp"
	   	    android:layout_marginBottom="1dp"
	    	android:background="@color/transparent"
	        android:layout_centerHorizontal="true"
	    	android:orientation="horizontal"
	        android:weightSum="1.0">
		   	<Button
		   	    android:id="@+id/credit_card_prev_button"
		   	    android:background="@drawable/button_selector_yellow"
		   	    android:layout_width="0dp"
		   	    android:layout_weight=".40"
		   	    android:layout_height="40dp"
		   	    android:layout_marginLeft="5dp"
		   	    android:layout_marginTop="5dp"
			   	android:paddingLeft="10dp"
			   	android:paddingRight="10dp"
		   	    android:gravity="center"
		        android:layout_centerHorizontal="true"
		   	    android:onClick="doBillingPrevButtonClick"
		   	    android:text="@string/prev_str"
		   	    android:textColor="@color/black"/>
		   	<EditText
		   	    android:layout_width="0dp"
		   	    android:layout_weight=".20"
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginTop="1dp"
	   	    	android:layout_marginLeft="1dp"
	   	    	android:layout_marginRight="1dp"
	        	android:visibility="invisible"/>
		   	<Button
		   	    android:id="@+id/credit_card_next_button"
		   	    android:background="@drawable/button_selector_yellow"
		   	    android:layout_width="0dp"
		   	    android:layout_weight=".40"
		   	    android:layout_height="40dp"
		   	    android:layout_marginTop="5dp"
		   	    android:layout_marginRight="5dp"
			   	android:paddingLeft="10dp"
			   	android:paddingRight="10dp"
		   	    android:gravity="center"
		        android:layout_centerHorizontal="true"
		   	    android:onClick="doBillingNextButtonClick"
		   	    android:text="@string/next_str"
		   	    android:textColor="@color/black"/>
		</LinearLayout>
	    <!-- End Next Button -->
	</LinearLayout>
	</LinearLayout>

    <ProgressBar
   	    android:id="@+id/credit_card_progress_bar"
   	    style="?android:attr/progressBarStyleLarge"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_centerHorizontal="true"
   	    android:layout_centerVertical="true"
        android:visibility="invisible"
   	/> 
</RelativeLayout>

<!-- Navigation Drawer -->

<ListView
    android:id="@+id/nav_left_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#CC111111"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
    android:cacheColorHint="#00000000"
    android:listSelector="#00000000"
    />

</android.support.v4.widget.DrawerLayout>
