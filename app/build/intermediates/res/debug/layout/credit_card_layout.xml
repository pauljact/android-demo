<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/toolbar_layout"/>
<!-- The main content view -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/credit_card_content_frame"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginTop="40dp"
    android:background="@drawable/glossy">
    
    <!-- Step Navigation -->
    <LinearLayout
        android:id="@+id/credit_card_navigation_steps"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
    	android:background="@color/white"
    	android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="1.0">
		   	<TextView
		   	    android:layout_height="wrap_content"
		   	    android:layout_width="0dp"
		   	    android:layout_weight="0.25"
		   		android:layout_marginTop="4dp"
		   		android:layout_marginBottom="4dp"
		   		android:gravity="center"
		   	    android:textSize="20sp"
		   	    android:textStyle="bold"
		   	    android:text="@string/cart_str"
		   	    android:textColor="@color/translucent_gray"
    			android:background="@color/transparent"/>
		   	<TextView
		   	    android:layout_height="wrap_content"
		   	    android:layout_width="0dp"
		   	    android:layout_weight="0.25"
		   		android:layout_marginTop="4dp"
		   		android:layout_marginBottom="4dp"
		   		android:gravity="center"
		   	    android:textSize="20sp"
		   	    android:textStyle="bold"
		   	    android:text="@string/shipping_str"
		   	    android:textColor="@color/translucent_gray"
    			android:background="@color/transparent"/>
		   	<TextView
		   	    android:layout_height="wrap_content"
		   	    android:layout_width="0dp"
		   	    android:layout_weight="0.25"
		   		android:layout_marginTop="4dp"
		   		android:layout_marginBottom="4dp"
		   		android:gravity="center"
		   	    android:textSize="20sp"
		   	    android:textStyle="bold"
		   	    android:text="@string/billing_str"
		   	    android:textColor="@color/yellow"
    			android:background="@color/transparent"/>
		   	<TextView
		   	    android:layout_height="wrap_content"
		   	    android:layout_width="0dp"
		   	    android:layout_weight="0.25"
		   		android:layout_marginTop="4dp"
		   		android:layout_marginBottom="4dp"
		   		android:gravity="center"
		   	    android:textSize="20sp"
		   	    android:textStyle="bold"
		   	    android:text="@string/submit_str"
		   	    android:textColor="@color/translucent_gray"
    			android:background="@color/transparent"/>
    </LinearLayout>
    
    <!-- Add New Address Option -->
    <LinearLayout
   	    android:id="@+id/credit_card_add_new_addr_ll"
        android:layout_below="@id/credit_card_navigation_steps"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
   	    android:layout_marginBottom="1dp"
    	android:background="@color/transparent"
    	android:orientation="horizontal"
	    android:weightSum="1.0">
	   	<TextView
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.20"
	   	    android:layout_height="wrap_content"
   			android:background="@color/transparent"/>
	   	<Button
	   	    android:id="@+id/credit_card_add_new_cc_button"
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.60"
	   	    android:layout_height="20dp"
	   	    android:background="@drawable/button_selector_yellow"
	   	    android:layout_marginTop="4dp"
	   	    android:layout_marginLeft="0dp"
		   	android:paddingLeft="2dp"
		   	android:paddingRight="2dp"
	   	    android:gravity="center"
	   	    android:onClick="doCreditCardAddNewButtonClick"
		   	android:textSize="12sp"
	   	    android:text="@string/new_cc_str"
	   	    android:textColor="@color/black"/>
	   	<TextView
	   	    android:layout_width="0dp"
	   	    android:layout_weight="0.20"
	   	    android:layout_height="wrap_content"
   			android:background="@color/transparent"/>
    </LinearLayout>
    <!-- End Add New Address Option -->
	    
    <!-- Use Same Address as Shipping -->
