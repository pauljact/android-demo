<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/toolbar_layout"/>
<RelativeLayout
   	android:id="@+id/new_user_main_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@drawable/glossy">
	<Button
   	    android:id="@+id/new_user_btn"
   	    android:layout_width="wrap_content"
   	    android:layout_height="40dp"
   	    android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
   	    android:onClick="doRegisterClick"
   	    android:background="@drawable/button_selector_blue"
   	    android:text="@string/register_button_str"
   	    android:padding="5dp"
   	    android:textColor="@color/black"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/new_user_btn">

<LinearLayout
    android:id="@+id/new_user_content_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/glossy"
    android:orientation="vertical">
    <!-- android:layout_marginTop="50dp"-->
    <TextView
   	    android:id="@+id/new_user_name_tv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
   	    android:text="@string/username"                
  		android:clickable="false"
   	    android:textSize="20sp"
   	    android:textStyle="bold"
   	    android:textColor="@color/black"
  		android:background="@color/transparent"/>	
   	<EditText
   	    android:id="@+id/new_user_name_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:inputType="text"
   	    android:ems="10"                
    	android:clickable="false"
    	android:imeOptions="actionDone"/>
   	<TextView
   	    android:id="@+id/new_user_email_tv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
   	    android:text="@string/email"                
  		android:clickable="false"
   	    android:textSize="20sp"
   	    android:textStyle="bold"
   	    android:textColor="@color/black"
  		android:background="@color/transparent"/>	
   	<EditText
   	    android:id="@+id/new_user_email_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:inputType="textEmailAddress"
   	    android:ems="10"                
    	android:clickable="false"
    	android:imeOptions="actionDone"/>
    <TextView
   	    android:id="@+id/new_user_password_tv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
   	    android:text="@string/password"                
  		android:clickable="false"
   	    android:textSize="20sp"
   	    android:textStyle="bold"
   	    android:textColor="@color/black"
  		android:background="@color/transparent"/>	
   	<EditText
   	    android:id="@+id/new_user_password_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
   	    android:ems="10"                
    	android:clickable="false"
    	android:imeOptions="actionDone"/>
    <TextView
   	    android:id="@+id/new_user_password_confirm_tv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
   	    android:text="@string/password_confirm"                
  		android:clickable="false"
   	    android:textSize="20sp"
   	    android:textStyle="bold"
   	    android:textColor="@color/black"
  		android:background="@color/transparent"/>
   	<EditText
   	    android:id="@+id/new_user_password_confirm_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPassword"
   	    android:ems="10"                
    	android:clickable="false"
    	android:imeOptions="actionDone"/>
    <TextView
   	    android:id="@+id/new_user_icon_tv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
   	    android:text="@string/select_icon"                
  		android:clickable="false"
   	    android:textSize="20sp"
   	    android:textStyle="bold"
   	    android:textColor="@color/black"
  		android:background="@color/transparent"/>
    <Spinner
    	android:id="@+id/new_user_default_icon_spinner"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
    	android:drawSelectorOnTop="true"
    	android:prompt="@string/new_user_icon_prompt"
    />
    <TextView
   	    android:id="@+id/new_user_choose_photo_tv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
   	    android:text="@string/choose_photo_from_phone"                
  		android:clickable="true"
   	    android:onClick="doGetPhonePhotoClick"
   	    android:textSize="20sp"
   	    android:textStyle="bold"
   	    android:textColor="@color/dark_blue"
  		android:background="@color/transparent"/>
    
    <ImageView
	    android:id="@+id/new_user_temp_img"
	    android:layout_height="50dp"
		android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
   	    android:layout_marginBottom="5dp"
	   	android:layout_marginLeft="5dp"
        android:visibility="invisible"
	    android:src="@drawable/ic_launcher" 
    	android:background="@color/transparent" />
</LinearLayout>
</ScrollView>
    <!-- Spinning Icon while app is processing something -->
    <ProgressBar
   	    android:id="@+id/new_user_progress_bar"
   	    style="?android:attr/progressBarStyleLarge"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
   	    android:layout_centerHorizontal="true"
    	android:background="#00FFFFFF"
        android:visibility="invisible"
   	/>	
</RelativeLayout>
</android.support.v4.widget.DrawerLayout>