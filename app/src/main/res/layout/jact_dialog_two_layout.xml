<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".JactLoginActivity"
    style="@style/EmptyStyle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:background="#FFFFFF">
    <!-- Only need the below if not setting title programmatically
         via builder.setTitle(). --> 
	<TextView
	    android:id="@+id/jact_dialog_two_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="Wrong Username or Password"
        android:textSize="18sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
        android:textColor="#43BFC7"
        android:background="#00FFFFFF"
   	/>
	<!-- Horizontal Bar -->
	<LinearLayout
    	android:orientation="vertical"
	    android:id="@+id/jact_dialog_two_divider"
	    android:layout_width="fill_parent"
	    android:layout_height="2dip"
	    android:background="#43BFC7">  
	</LinearLayout>
	<!-- Message -->
	<TextView
	    android:id="@+id/jact_dialog_two_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text=""
        android:textSize="18sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
    	android:layout_marginTop="5dp"
    	android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:background="#00FFFFFF"
   	/>
	<!-- Buttons -->
	<RelativeLayout
    	android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/transparent">
	<Button
         android:id="@+id/jact_dialog_two_button"
	     android:background="@drawable/button_selector_blue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
   	     android:layout_marginBottom="5dp"
  	     android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_alignParentLeft="true"
         android:text="Cancel"
	     android:textSize="14sp"
	     android:textStyle="bold"
	     android:textColor="@color/white"
	     android:onClick="doDialogCancelClick" />
	<Button
         android:id="@+id/jact_dialog_two_button_two"
	     android:background="@drawable/button_selector_blue"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
   	     android:layout_marginBottom="5dp"
  	     android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_alignParentRight="true"
         android:text="OK"
	     android:textSize="14sp"
	     android:textStyle="bold"
	     android:textColor="@color/white"
	     android:onClick="doDialogOkClick" />
	</RelativeLayout>
</LinearLayout>