	<!-- BHP Replace the below line with this:
	android:layout_below="@+id/jact_alternate_signin_ll"-->
	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   	android:layout_below="@+id/jact_login_button"
    android:layout_alignLeft="@+id/jact_password"
    android:layout_alignRight="@+id/jact_password"
   	android:layout_marginTop="10dp"
    android:gravity="center_horizontal|center"
    android:background="@color/transparent"
    android:orientation="horizontal">
	<TextView
        android:id="@+id/forgot_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password_label"
        android:textSize="16sp"
        android:textColor="@color/light_blue"
        android:onClick="doForgotPassword"
    	android:background="@color/transparent"                
        android:clickable="true"/>
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
   	    android:layout_marginLeft="10dp"
   	    android:layout_marginRight="10dp"
        android:text=" | "
        android:textSize="16sp"
        android:textColor="@color/light_blue"
    	android:background="@color/transparent"             
        android:clickable="false"/>
	<TextView
        android:id="@+id/jact_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:paddingRight="50dp"
        android:text="@string/jact_register"
        android:textSize="16sp"
        android:textColor="@color/light_blue"
        android:onClick="doRegisterButtonClick"
    	android:background="@color/transparent"                
        android:clickable="true"/>
   	</LinearLayout>
</RelativeLayout>
</LinearLayout>