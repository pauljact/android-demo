<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/products_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/products_bg_selector"
    android:orientation="horizontal"
    android:padding="5dp" >
 
    <LinearLayout
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
   	    android:layout_marginBottom="1dp"
    	android:background="@color/transparent"
    	android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="1.0">
        
    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout android:id="@+id/product_thumbnail"
        android:layout_width="0dp"
        android:layout_weight="0.18"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:background="@drawable/products_image_bg"
        android:layout_marginRight="2dp">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
        />
    </LinearLayout>
    
    <!-- Title Of Product-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.60"
        android:background="@color/transparent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/product_drawing_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Prize Drawing"
        android:textColor="#FF2200"
        android:typeface="sans"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <!-- Drawing Date -->
    <TextView
        android:id="@+id/product_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:background="@color/transparent"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:textColor="@color/black"
        android:typeface="sans"
        android:textSize="12sp"
        android:textStyle="bold"/>
    </LinearLayout>
 

 
    <!-- Price -->
    <LinearLayout
	    android:layout_width="0dp"
	    android:layout_weight="0.22"
    	android:orientation="vertical"
	    android:gravity="right">
	    <TextView
	        android:id="@+id/product_bux"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:gravity="right"
	        android:textSize="10sp"
	        android:textColor="@color/dark_blue"
	        android:textStyle="bold"/>
	    <TextView
	        android:id="@+id/product_price_seperator"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:gravity="right"
	        android:textSize="10sp"
	        android:textColor="@color/dark_blue"
	        android:textStyle="bold"
	   	    android:text="+"/>
	    <TextView
	        android:id="@+id/product_points"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@color/transparent"
	        android:gravity="right"
	        android:layout_marginRight="2dp"
	        android:textSize="10sp"
	        android:textColor="@color/dark_blue"
	        android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
    <!-- Empty Text View, to hold Product ID -->
    <TextView
        android:id="@+id/product_pid"
		android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:visibility="invisible"/>
 
     <!-- Rightend Arrow 
     <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/> -->
 
</RelativeLayout>