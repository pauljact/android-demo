<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/products_bg_selector"
    android:orientation="horizontal"
    android:padding="5dip" >
 
    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout android:id="@+id/product_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/products_image_bg"
        android:layout_marginRight="5dip">
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
        />
    </LinearLayout>
    
    <!-- Title Of Product-->
    <TextView
        android:id="@+id/product_title"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/product_thumbnail"
        android:layout_toRightOf="@+id/product_thumbnail"
        android:background="#00000000"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"/>
 
    <!-- Drawing Date -->
    <TextView
        android:id="@+id/product_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_title"
        android:textColor="#343434"
        android:background="#00000000"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/product_thumbnail"
    />
 
    <!-- Jact Bux -->
    <TextView
        android:id="@+id/product_bux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/product_title"
        android:layout_toRightOf="@+id/product_title"
        android:background="#00000000"
        android:gravity="right"
        android:layout_marginRight="5dip"
        android:textSize="10dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>
 
     <!-- Rightend Arrow 
     <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/> -->
 
</RelativeLayout>