<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avatar_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/products_bg_selector"
    android:orientation="horizontal"
    android:padding="5dp" >
        
    <!--  ListRow Left side Thumbnail image -->
    <LinearLayout android:id="@+id/avatar_thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@color/transparent"
        android:layout_marginRight="2dp">
        <!-- android:background="@drawable/products_image_bg"-->
        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
        	android:background="@color/transparent"
        	android:padding="0dp"/>
    </LinearLayout>
 
    <!-- Empty Text View, to hold Avatar ID -->
    <TextView
        android:id="@+id/avatar_id"
		android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:visibility="invisible"/>
</LinearLayout>