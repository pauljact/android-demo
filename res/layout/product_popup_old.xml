<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_margin="3dp"
    android:background="@color/dark_blue">
 
 <!-- Draw Blue Border around Product Popout -->
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_margin="3dp"
     android:background="@drawable/glossy">
     
     <!-- Relative Layout for Image, Title, Description, and 'X' Close Button -->
     <RelativeLayout 
      android:id="@+id/product_popup_image_rl"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:background="@color/transparent">
	      
	      <!-- Product Image -->
	      <ImageView
	          android:id="@+id/product_popup_img"
	          android:layout_height="match_parent"
		   	  android:layout_width="wrap_content"
	   	      android:layout_alignParentTop="true"
	   	      android:layout_alignParentLeft="true"
        	  android:layout_marginTop="5dp"
   	    	  android:layout_marginBottom="5dp"
	   	      android:layout_marginLeft="5dp"
	          android:src="@drawable/ic_launcher" 
    		  android:background="@color/transparent" />
	      <!-- END: Product Image -->
	      
	      <RelativeLayout
		      android:layout_height="match_parent"
			  android:layout_width="wrap_content"
			  android:layout_toRightOf="@+id/product_popup_img"
	   	      android:layout_alignParentTop="true"
	   	      android:layout_alignParentRight="true">"
			  <!-- Close Popup 'X' button -->
		      <ImageView
		          android:id="@+id/product_popup_close_img"
		          android:layout_height="25dp"
		          android:layout_width="25dp"
	        	  android:layout_marginTop="5dp"
	   	    	  android:layout_marginRight="5dp"
	   	    	  android:layout_alignParentTop="true"
	   	    	  android:layout_alignParentRight="true"
                  android:layout_gravity="right"
		          android:src="@drawable/close_icon" 
	    		  android:background="@color/transparent"
        		  android:onClick="doPopupDismissClick"    
        		  android:clickable="true"/>
		      <!-- END: Close Popup 'X' button -->
			      
		      <!-- Product Title -->
		      <TextView
		          android:id="@+id/product_popup_text_title"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
   	    		  android:layout_below="@+id/product_popup_close_img"
       	          android:layout_marginLeft="3dp"
			      android:textSize="14sp"
			      android:textStyle="bold"
			  	  android:textColor="@color/white"
	    		  android:background="@color/transparent" />
		      <!-- Product Title -->
		      
		      <!-- Product Summary -->
		      <TextView
		          android:id="@+id/product_popup_text_summary"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
   	    		  android:layout_below="@+id/product_popup_text_title"
       	          android:layout_marginLeft="3dp"
			      android:textSize="12sp"
			      android:gravity="left"
			      android:textStyle="bold"
			  	  android:textColor="@color/white"
	    		  android:background="@color/transparent" />
		      <!-- Product Summary -->
	      </RelativeLayout>
	           
      </RelativeLayout>
      <!-- END RL for Image, Title, Description, and 'X' Close Button -->
            
      <!-- RL Containing Drawing Date (if applicable), price, and Add To Cart Button -->
      <RelativeLayout
          android:id="@+id/product_popup_text_lin_layout"
	      android:layout_height="wrap_content"
	   	  android:layout_width="match_parent"
   	      android:layout_below="@+id/product_popup_image_rl"
   		  android:background="@color/transparent">
	      <!-- RL Containing Drawing Date (if applicable), and price -->
	      <RelativeLayout
	      android:layout_height="match_parent"
	   	  android:layout_width="wrap_content"
   		  android:background="@color/transparent">
		      
	      <!-- Price (in Bux, Points, or USD) -->
          <TextView
	          android:id="@+id/product_popup_text_bux"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	   	      android:layout_alignParentTop="true"
	   	      android:layout_alignParentLeft="true"
       	      android:layout_marginLeft="5dp"
        	  android:layout_centerHorizontal="true"
		      android:textSize="12sp"
		      android:textStyle="bold"
		  	  android:textColor="#10bcc9"
    		  android:background="@color/transparent" />
	      <!-- END: Price (in Bux, Points, or USD) -->
	      
	      <!-- Drawing Label -->
	      <TextView
	          android:id="@+id/product_popup_text_drawing"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
   	          android:layout_below="@+id/product_popup_text_bux"
        	  android:layout_alignParentLeft="true"
       	      android:layout_marginLeft="5dp"
	          android:text="Drawing"
		      android:textSize="16sp"
		      android:textStyle="bold"
		  	  android:textColor="#FF2200"
    		  android:background="@color/transparent" />
	      <!-- END: Drawing Label -->
	    
	      <!-- Product Date (only relevant for 'Drawing/Raffle' products)-->
	      <TextView
	          android:id="@+id/product_popup_text_date"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
   	    	  android:layout_below="@+id/product_popup_text_drawing"
        	  android:layout_alignParentLeft="true"
       	      android:layout_marginLeft="5dp"
		      android:textSize="12sp"
		      android:textStyle="bold"
		  	  android:textColor="#FFDD0000"
    		  android:background="@color/transparent" />
	      <!-- END: Product Date -->
	      </RelativeLayout>
	      
	      <!-- Add to Cart Button -->
	      <RelativeLayout
          	android:id="@+id/price_and_button_rl"
	      	android:layout_height="match_parent"
	   	  	android:layout_width="wrap_content"
        	android:layout_alignParentTop="true"
        	android:layout_alignParentRight="true"
   		  	android:background="@color/transparent">
	      <!-- Add to Cart Button -->
	      <Button
	          android:id="@+id/product_popup_purchase_button"
	          android:background="@drawable/button_selector_blue"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
        	  android:layout_centerHorizontal="true"
        	  android:layout_centerVertical="true"
        	  android:layout_alignParentRight="true"
       	      android:layout_marginTop="5dp"
  	    	  android:layout_marginBottom="10dp"
       	      android:layout_marginLeft="5dp"
  	    	  android:layout_marginRight="10dp"
    		  android:paddingRight="10dp"
    		  android:paddingLeft="10dp"
    		  android:paddingTop="5dp"
    		  android:paddingBottom="5dp"
	          android:text="Add To Cart"
			  android:textSize="14sp"
			  android:textStyle="bold"
			  android:textColor="@color/white"
       		  android:onClick="doAddToCartClick" />
	      <!-- END: Add To Cart Button -->
	      </RelativeLayout>
		    
	      
	      <!-- Empty Text View, to hold Product ID -->
 		  <TextView
	          android:id="@+id/product_popup_text_pid"
			  android:layout_width="0dp"
	          android:layout_height="0dp"
	          android:background="@color/transparent"
	          android:visibility="invisible"/>
	      <!-- END: Empty Text View, to hold Product ID -->
      </RelativeLayout>
	  <!-- END LL Containing all text info (Title, Summary Date, Price) -->
 </LinearLayout>
 <!-- END: Draw Blue Border around Product Popout -->
</LinearLayout>