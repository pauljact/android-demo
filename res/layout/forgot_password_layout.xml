<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include layout="@layout/toolbar_layout"/>

<RelativeLayout
    android:id="@+id/forgot_password_content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@drawable/glossy">
    <!-- <include layout="@layout/toolbar_layout"/>-->
    <TextView
   	    android:id="@+id/forgot_password_tv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
   	    android:text="@string/forgot_password_str"                
  		android:clickable="false"
   	    android:textSize="32sp"
   	    android:textStyle="bold"
   	    android:textColor="@color/black"
  		android:background="@color/transparent"/>
    <AutoCompleteTextView 
    	android:id="@+id/username_autocomplete_tv"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
   	    android:layout_below="@+id/forgot_password_tv"
    	android:completionThreshold="1" />
    <!-- android:completionHint="Begin Typing to See Usernames You've Used" -->
   	<!-- <Spinner
 		android:id="@+id/username_spinner"
  	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
   	    android:layout_below="@+id/username_autocomplete_tv"
 		android:dropDownWidth="250dp"
 	    android:popupBackground="@color/white"
   		android:gravity="left"
        android:paddingLeft="5dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
       	android:textSize="32sp"
       	android:textColor="@color/black"
       	android:textStyle="bold"
 	    android:spinnerMode="dropdown"/>-->
   	<!-- 
   	<EditText
   	    android:id="@+id/forgot_password_et"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@+id/forgot_password_tv"
   	    android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
   	    android:ems="10"                
    	android:clickable="false"
    	android:imeOptions="actionDone"/> -->
   	<Button
   	    android:id="@+id/forgot_password_btn"
   	    android:layout_width="wrap_content"
   	    android:layout_height="40dp"
        android:layout_alignParentBottom="true"
   	    android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
   	    android:onClick="doForgotPasswordClick"
   	    android:background="@drawable/button_selector_blue"
   	    android:text="@string/email_password_str"
   	    android:padding="5dp"
   	    android:textColor="@color/black"
   	/>
    <ProgressBar
   	    android:id="@+id/forgot_password_progress_bar"
   	    style="?android:attr/progressBarStyleLarge"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
   	    android:layout_centerHorizontal="true"
    	android:background="#00FFFFFF"
        android:visibility="invisible"
   	/>	
</RelativeLayout>
</android.support.v4.widget.DrawerLayout>