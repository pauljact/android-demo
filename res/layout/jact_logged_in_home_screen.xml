<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/user_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_launcher" />
    
    <TextView
        android:id="@+id/logged_in_home_welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_profile_pic"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/user_profile_pic"
        android:text="Welcome Foo"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/userpoints_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/user_profile_pic"
        android:layout_alignLeft="@+id/logged_in_home_welcome_textview"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/current_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userpoints_pic"
        android:layout_toRightOf="@+id/userpoints_pic"
        android:text="User Points: ..." />
    
    <TextView
        android:id="@+id/view_prizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_pic"
        android:layout_below="@+id/userpoints_pic"
        android:layout_marginTop="15dp"
        android:text="Prize Drawings"
        android:textSize="16dp"
        android:onClick="doFetchPrizeDrawings"                
        android:clickable="true" />

    <TextView
        android:id="@+id/premium_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_pic"
        android:layout_below="@+id/view_prizes"
        android:layout_marginTop="5dp"
        android:text="Premium Products"
        android:textSize="16dp"
        android:onClick="doFetchPremiumProducts"                
        android:clickable="true" />

    <TextView
        android:id="@+id/collect_and_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_pic"
        android:layout_below="@+id/premium_products"
        android:layout_marginTop="5dp"
        android:text="Collect And Win"
        android:textSize="16dp"
        android:onClick="doFetchCollectAndWin"                
        android:clickable="true" />

    <TextView
        android:id="@+id/supported_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_pic"
        android:layout_below="@+id/collect_and_win"
        android:layout_marginTop="5dp"
        android:text="Jact Supported Games"
        android:textSize="16dp"
        android:onClick="doFetchSupportedGames"                
        android:clickable="true" />

    <TextView
        android:id="@+id/user_game_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_pic"
        android:layout_below="@+id/supported_games"
        android:layout_marginTop="5dp"
        android:text="My Game List"
        android:textSize="16dp"
        android:onClick="doFetchUserGameList"                
        android:clickable="true" />
    
    <TextView
        android:id="@+id/user_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_profile_pic"
        android:layout_below="@+id/user_game_list"
        android:layout_marginTop="5dp"
        android:text="My User View"
        android:textSize="16dp"
        android:onClick="doFetchUserView"                
        android:clickable="true" /> 
    
   <TextView
        android:id="@+id/test_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/user_view"
        android:layout_marginTop="5dp"
        android:textSize="8dp"
        android:text="TextView"
        android:visibility="invisible" />
   
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="doFetchNodeButtonClick"
        android:text="View Current Jact Prize Drawings"
        android:visibility="invisible" />
</RelativeLayout>