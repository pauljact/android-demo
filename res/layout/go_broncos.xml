<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0055CC"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/google_query_textview"
        android:background="#FF7700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This image fetched from a website using GET:"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/broncos_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/broncos_to_jact_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="broncosToHomeButtonClick"
        android:text="Jact Home" />

</LinearLayout>